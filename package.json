{
  "name": "@scallop-io/sui-kit",
  "version": "1.11.0",
  "description": "Tookit for interacting with SUI network",
  "keywords": [
    "sui",
    "scallop labs",
    "move",
    "blockchain",
    "sui-kit"
  ],
  "author": "team@scallop.io",
  "homepage": "https://github.com/scallop-io/sui-kit#readme",
  "bugs": "https://github.com/scallop-io/sui-kit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/scallop-io/sui-kit.git"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.mjs",
      "browser": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf tsconfig.tsbuildinfo ./dist",
    "build": "npm run build:types && npm run build:tsup",
    "build:tsup": "tsup ./src/index.ts --format esm,cjs --sourcemap",
    "build:types": "tsc --build",
    "watch": "pnpm run clean & pnpm run watch:types & pnpm run watch:tsup",
    "watch:tsup": "tsup ./src/index.ts --format esm,cjs --clean --splitting --watch",
    "watch:types": "tsc --watch",
    "test": "pnpm test:types && pnpm test:unit",
    "test:unit": "vitest run --test-timeout=60000",
    "test:types": "tsc -p ./test",
    "test:watch": "vitest",
    "release": "standard-version -f",
    "release:major": "standard-version -r major",
    "release:minor": "standard-version -r minor",
    "release:patch": "standard-version -r patch",
    "format:fix": "prettier --ignore-path 'dist/* docs/*' --write '**/*.{ts,json,md}'",
    "lint:fix": "eslint .",
    "prepare": "husky install",
    "commit": "commit",
    "doc": "typedoc --out docs src/index.ts"
  },
  "dependencies": {
    "@mysten/bcs": "^1.1.0",
    "@mysten/sui": "^1.11.0",
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@scure/bip39": "^1.4.0",
    "assert": "^2.1.0",
    "bech32": "^2.0.0",
    "superstruct": "^1.0.3",
    "ts-retry-promise": "^0.8.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/prompt-cli": "^18.0.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.7.4",
    "dotenv": "^16.4.5",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.2.4",
    "typedoc": "^0.26.7",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "valibot": "0.42.1",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "**/*.ts": [
      "pnpm run format:fix",
      "pnpm run lint:fix"
    ],
    "**/*.json|md": [
      "pnpm run format:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
