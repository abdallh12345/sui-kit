{
  "name": "@scallop-io/sui-kit",
  "author": "Scallop Labs <team@scallop.io>",
  "description": "Tookit for interacting with SUI network",
  "version": "1.18.0-experimental.1",
  "license": "Apache-2.0",
  "keywords": [
    "sui",
    "scallop labs",
    "move",
    "blockchain",
    "sui-kit"
  ],
  "homepage": "https://github.com/scallop-io/sui-kit#readme",
  "bugs": "https://github.com/scallop-io/sui-kit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/scallop-io/sui-kit.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf tsconfig.tsbuildinfo ./dist",
    "build": "npm run build:types && npm run build:tsup",
    "build:tsup": "tsup",
    "build:types": "tsc --build",
    "watch": "pnpm run clean & pnpm run watch:types & pnpm run watch:tsup",
    "watch:tsup": "tsup --splitting --watch",
    "watch:types": "tsc --watch",
    "test": "pnpm test:types && pnpm test:unit",
    "test:types": "tsc -p ./test",
    "test:unit": "vitest run --test-timeout=60000",
    "test:watch": "vitest",
    "format:fix": "prettier --write '**/*.{mts,mjs,ts,json,md}' '!dist/*' '!docs/*'",
    "lint:fix": "eslint .",
    "prepare": "husky && echo 'npx lint-staged' > .husky/pre-commit",
    "commit": "commit",
    "release": "standard-version -f",
    "release:major": "standard-version -r major",
    "release:minor": "standard-version -r minor",
    "release:patch": "standard-version -r patch",
    "doc": "typedoc --out docs src/index.ts"
  },
  "dependencies": {
    "@mysten/bcs": "^1.2.0",
    "@mysten/sui": "^1.18.0",
    "@noble/curves": "^1.4.2",
    "@noble/hashes": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "assert": "^2.1.0",
    "bech32": "^2.0.0",
    "tmp": "^0.2.3",
    "ts-retry-promise": "^0.8.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/prompt-cli": "^19.6.0",
    "@types/node": "^22.10.5",
    "@types/tmp": "^0.2.6",
    "dotenv": "^16.4.7",
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.5",
    "typedoc": "^0.27.6",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.19.1",
    "valibot": "0.42.1",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "**/*.ts": [
      "pnpm run format:fix",
      "pnpm run lint:fix"
    ],
    "**/*.json|md": [
      "pnpm run format:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
